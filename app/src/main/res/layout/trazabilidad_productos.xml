<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Título de la pantalla -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:background="#468966"
        android:textColor="@android:color/white"
        android:gravity="start"
        android:padding="16dp"
        android:text="@string/trazabilidad"
        android:textSize="24sp"
        app:layout_constraintWidth_percent="1.0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Sección de detalles del equipo -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ivTeamDetails"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="#468966"
        android:padding="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        app:layout_constraintWidth_default="spread"
        app:layout_constraintWidth_percent="1.0">
        <ImageView
            android:id="@+id/ImageViewTecnical"
            android:layout_width="93dp"
            android:layout_height="60dp"
            android:contentDescription="@string/imagen_del_equipo_t_cnico"
            android:src="@drawable/ic_launcher_foreground"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.075"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/tvInfoTeam"
            android:layout_width="205dp"
            android:layout_height="60dp"
            android:text="@string/informacion_equipo"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginStart="20dp"

            app:layout_constraintVertical_bias="0.0"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Campo de búsqueda -->
    <EditText
        android:id="@+id/entrada_busqueda"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:autofillHints="Buscar producto"
        android:backgroundTint="#468966"
        android:background="@android:color/transparent"
        android:hint="@string/search_hint"
        android:inputType="text"
        android:textSize="18sp"
        android:layout_marginStart="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivTeamDetails"
        app:layout_constraintHorizontal_bias="0.8" />

    <!-- Ícono de búsqueda -->
    <ImageView
        android:id="@+id/icono_busqueda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/search_icon"
        app:layout_constraintBottom_toBottomOf="@id/entrada_busqueda"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.931"
        app:layout_constraintStart_toStartOf="@id/entrada_busqueda"
        app:layout_constraintTop_toTopOf="@id/entrada_busqueda"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/baseline_search_24" />

    <!-- RecyclerView para mostrar la lista de productos -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewProducts"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/entrada_busqueda"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/BtnListadoUsuarios"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintVertical_weight="0.7"
        tools:listitem="@layout/trazabilidad_pagina_principal_productos_recyvleview" />

    <Button
        android:id="@+id/BtnListadoUsuarios"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#91C56E"
        android:text="@string/volver"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.609"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerViewProducts"
        app:layout_constraintVertical_bias="0.9"
        app:layout_constraintWidth_percent="0.9" />


</androidx.constraintlayout.widget.ConstraintLayout>