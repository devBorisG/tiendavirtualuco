<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".trazabilidad.ProductDetailActivity">

    <!-- Título principal -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:background="#468966"
        android:textColor="@android:color/white"
        android:gravity="start"
        android:padding="16dp"
        android:text="@string/trazabilidad"
        android:textSize="24sp"
        app:layout_constraintWidth_percent="1.0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Información del equipo técnico -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ivTeamDetails"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="#468966"
        android:padding="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        app:layout_constraintWidth_default="spread"
        app:layout_constraintWidth_percent="1.0">

        <ImageView
            android:id="@+id/ImageViewTecnical"
            android:layout_width="93dp"
            android:layout_height="60dp"
            android:contentDescription="@string/imagen_del_equipo_t_cnico"
            android:src="@drawable/ic_launcher_foreground"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.075"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvInfoTeam"
            android:layout_width="205dp"
            android:layout_height="60dp"
            android:text="@string/informacion_equipo"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginStart="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@id/ImageViewTecnical"
            app:layout_constraintTop_toTopOf="@id/ImageViewTecnical"
            app:layout_constraintVertical_bias="0.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Barra superior con flecha y favoritos -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/ivTeamDetails"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="60sp"
            android:layout_height="50sp"
            android:contentDescription="@string/todo"
            android:src="@drawable/ic_back_arrow" />


    </LinearLayout>

    <!-- Imagen del producto -->
    <ImageView
        android:id="@+id/productImage"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:contentDescription="@string/todo"
        android:src="@drawable/sample_product"
        android:scaleType="centerInside"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5" />

    <!-- Nombre y precio del producto -->
    <TextView
        android:id="@+id/productName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/monitor_lg_ultragear_27gq50f_lcd_27"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/productImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/productPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/_725_000"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/productName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/productOldPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/_870_000_20_off"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:paintFlags="strikeThruText"
        app:layout_constraintTop_toBottomOf="@id/productPrice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Tienda y botón de visita -->
    <LinearLayout
        android:id="@+id/storeSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/productOldPrice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp">

        <TextView
            android:id="@+id/storeName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/jap_store"
            android:textSize="18sp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/visitStoreButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/visitar"
            android:background="#468966"
            android:backgroundTint="@color/green"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <!-- Descripción del producto -->
    <TextView
        android:id="@+id/productDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/voltaje_100v_240v_n_tama_o_de_la_pantalla_27_n_pantalla_lcd_de_27_n_resoluci_n_1920x1080px_n_relaci_n_de_aspecto_16_9_n_panel_va_n_250cd_m_n_conexi_n_2_hdmi"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/storeSection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botones de Agregar al carrito y Comprar -->
    <LinearLayout
        android:id="@+id/buttonSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/productDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnVolver"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/volver"
        android:layout_weight="1"
        android:textSize="18sp"

        android:backgroundTint="#91C56E"
        android:textColor="@android:color/white"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.609"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBaseline_toBottomOf="@+id/buttonSection"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>