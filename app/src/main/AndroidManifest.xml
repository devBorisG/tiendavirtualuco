<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">


    <uses-permission android:name="android.permission.INTERNET" />
    <!--
    Allows Glide to monitor connectivity status and restart failed requests if users go from a
    a disconnected to a connected network state.
    -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>


    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Tiendavirtualuco"
        tools:targetApi="31">


        <!-- Actividad principal que se inicia al lanzar la aplicación -->



        <activity

            android:name=".tienda.TiendaAgregarProductoActivity"
            android:exported="true" />
        <activity
            android:name=".tienda.CrearTiendaActivity"
            android:exported="true" />
        <activity
            android:name=".tienda.MainTiendaActivity"
            android:exported="true" />


        <activity
            android:name=".reportes.MisReportes"
            android:exported="true"
            />

        <activity android:name=".favoritos.MisFavoritosActivity" />
        <activity android:name=".detalleproducto.DetalleProductoActivity" />

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <!-- Actividad para añadir una nueva dirección -->
        <activity
            android:name=".activities.AddAddressActivity"
            android:exported="true" />

        <!-- Actividad para elegir el método de pago -->
        <activity
            android:name=".activities.PaymentMethodActivity"
            android:exported="true" />

        <!-- Actividad para añadir un nuevo método de pago -->
        <activity
            android:name=".activities.AddPaymentMethodActivity"
            android:exported="true" />



        <activity android:name=".MainActivityBuzonNotif"
        android:exported="true"/>
        <activity android:name=".DetalleNotificacionActivity"
            android:exported="true"/>

        <activity

            android:name=".RegisterActivity"
            android:exported="true">
        </activity>



        <activity

            android:name=".TrackingActivity"
            android:exported="true" />
        <activity android:name=".homepageproductos.PaginaPrincipalProductosActivity" />

        <activity
            android:name=".perfil.Profile"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".perfil.EditProfileActivity" android:exported="true" />
        <activity android:name=".perfil.LanguageActivity" android:exported="true" />
        <activity android:name=".perfil.FeedbackActivity" android:exported="true" />
        <activity android:name=".perfil.ReferFriendActivity" android:exported="true" />
        <activity android:name=".perfil.TermsConditionsActivity" android:exported="true" />

    </application>

    <!-- Permisos necesarios -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />


</manifest>
